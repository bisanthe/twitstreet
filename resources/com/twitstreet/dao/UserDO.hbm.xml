<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.twitstreet.dao">
	<class name="UserDO" table="user" lazy="false">
		<id name="id" column="id">
			<generator class="native"></generator>
		</id>
		<property name="userName" column="userName" type="string" not-null="true"></property>
		<property name="lastLogin" column="lastLogin" type="timestamp" not-null="true"></property>
		<property name="firstLogin" column="firstLogin" type="timestamp" not-null="true"></property>
		<property name="cash" column="cash" type="integer" not-null="true"></property>
		<property name="postfolio" column="portfolio" type="integer" not-null="true"></property>		
	</class>
</hibernate-mapping>